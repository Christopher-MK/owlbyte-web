---
const navLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/servicios', label: 'Servicios' },
  { href: '/paquetes', label: 'Paquetes' },
  { href: '/portafolio', label: 'Portafolio' },
  { href: '/proceso', label: 'Proceso' },
  { href: '/sobre-nosotros', label: 'Sobre nosotros' },
  { href: '/faq', label: 'FAQ' },
  { href: '/contacto', label: 'Contacto' }
];
---

<header class="border-b border-slate-200 bg-white/90 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href="/" class="flex items-center gap-2 text-lg font-semibold text-navy-900" aria-label="Ir a inicio OwlByte">
      <span class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-navy-900 text-white">OB</span>
      OwlByte
    </a>
    <nav aria-label="Navegación principal" class="hidden lg:block">
      <ul class="flex items-center gap-6 text-sm font-medium text-slate-600">
        {navLinks.map((link) => (
          <li>
            <a href={link.href} class="transition hover:text-navy-900">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <div class="hidden lg:flex items-center gap-3">
      <a href="/contacto" class="btn-secondary" aria-label="Hablar con OwlByte">Hablemos</a>
    </div>
    <div class="lg:hidden">
      <a href="/contacto" class="btn-primary" aria-label="Hablar con OwlByte">Contactar</a>
    </div>
  </div>
  <div class="border-t border-slate-200 lg:hidden">
    <nav aria-label="Navegación móvil" class="mx-auto max-w-6xl overflow-x-auto px-6 py-3">
      <ul class="flex items-center gap-4 text-sm font-medium text-slate-600">
        {navLinks.map((link) => (
          <li>
            <a href={link.href} class="whitespace-nowrap transition hover:text-navy-900">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
