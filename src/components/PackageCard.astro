---
const { name, price, description, features } = Astro.props;
---

<div class="card flex h-full flex-col p-6">
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold text-navy-900">{name}</h3>
    <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{price}</span>
  </div>
  <p class="mt-3 text-sm text-slate-600">{description}</p>
  <ul class="mt-4 space-y-2 text-sm text-slate-600">
    {features.map((feature) => (
      <li class="flex items-start gap-2">
        <span class="mt-1 h-2 w-2 rounded-full bg-cyan-400"></span>
        {feature}
      </li>
    ))}
  </ul>
  <div class="mt-auto pt-6">
    <a href="/contacto" class="btn-primary w-full" aria-label={`Solicitar paquete ${name}`}>Solicitar</a>
  </div>
</div>
