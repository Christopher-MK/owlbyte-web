---
import BaseLayout from '@/layouts/BaseLayout.astro';
import FAQList from '@/components/FAQList.astro';
import CTA from '@/components/CTA.astro';
import { faqs } from '@/data/faqs';

const title = 'FAQ | OwlByte';
const description = 'Respuestas rápidas sobre el proceso, tiempos y entregables de OwlByte.';
---

<BaseLayout title={title} description={description}>
  <section class="bg-slate-50">
    <div class="mx-auto max-w-6xl px-6">
      <div class="container-grid">
        <div class="lg:col-span-5">
          <h1 class="text-4xl font-semibold text-navy-900">Preguntas frecuentes</h1>
          <p class="mt-4 text-base text-slate-600">
            Resolviendo dudas para que tomes decisiones rápidas y seguras.
          </p>
        </div>
        <div class="lg:col-span-7">
          <FAQList faqs={faqs} />
        </div>
      </div>
    </div>
  </section>

  <CTA
    title="¿Tienes otra pregunta?"
    description="Estamos listos para ayudarte a definir el camino digital de tu marca."
    primaryLabel="Escribir a OwlByte"
  />
</BaseLayout>
