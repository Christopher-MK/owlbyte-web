---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ServiceCard from '@/components/ServiceCard.astro';
import CTA from '@/components/CTA.astro';
import { services } from '@/data/services';

const title = 'Servicios | OwlByte';
const description = 'Diseño web, branding, marketing digital, ecommerce y optimización para marcas en crecimiento.';
---

<BaseLayout title={title} description={description}>
  <section class="bg-slate-50">
    <div class="mx-auto max-w-6xl px-6">
      <div class="container-grid">
        <div class="lg:col-span-5">
          <h1 class="text-4xl font-semibold text-navy-900">Servicios integrales para cada etapa</h1>
          <p class="mt-4 text-base text-slate-600">
            De la estrategia al lanzamiento. Diseñamos experiencias claras y optimizadas para el crecimiento.
          </p>
        </div>
        <div class="lg:col-span-7 grid gap-6 md:grid-cols-2">
          {services.map((service) => (
            <ServiceCard {...service} />
          ))}
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="mx-auto max-w-6xl px-6">
      <div class="grid gap-8 lg:grid-cols-3">
        <div class="card p-6">
          <h3 class="text-lg font-semibold text-navy-900">Auditoría y diagnóstico</h3>
          <p class="mt-3 text-sm text-slate-600">
            Evaluamos performance, SEO, experiencia de usuario y oportunidades de automatización.
          </p>
        </div>
        <div class="card p-6">
          <h3 class="text-lg font-semibold text-navy-900">Implementación técnica</h3>
          <p class="mt-3 text-sm text-slate-600">
            Desarrollo moderno con énfasis en velocidad, seguridad y mantenibilidad.
          </p>
        </div>
        <div class="card p-6">
          <h3 class="text-lg font-semibold text-navy-900">Optimización continua</h3>
          <p class="mt-3 text-sm text-slate-600">
            Iteramos con métricas reales y experimentos controlados para mejorar resultados.
          </p>
        </div>
      </div>
    </div>
  </section>

  <CTA
    title="Conversemos sobre tus objetivos"
    description="Te ayudamos a definir la estrategia digital ideal para tu equipo y tu presupuesto."
    primaryLabel="Agendar diagnóstico"
  />
</BaseLayout>
